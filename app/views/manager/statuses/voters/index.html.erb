<div class="row">
<h1>Статусы электората</h1>
	<div class="col-md-5">
		<legend>Активные</legend>

		<div class="list-group">
			<% @statuses.each do |status| %>
				  <a href="#" class="list-group-item">
				    <h4 class="list-group-item-heading"><%= status.name %></h4>
				    <p class="list-group-item-text"><%= status.description %></p>
				  </a>
			<% end %>
		</div>
	</div>

	<div class="col-md-7" id="status-info">


		<%= form_for @status, :url => manager_statuses_voters_path, method: :post, :html => { :multipart => true, class: "form-horizontal" } do |form| %>
		  <fieldset>
		    <legend>Добавить новый статус</legend>
		    <div class="form-group">
		      <label for="inputEmail" class="col-lg-2 control-label">Название</label>
		      <div class="col-lg-10">
			      <%= form.text_field :name, class: 'form-control' %>
		      </div>
		    </div>

		    <div class="form-group">
		      <label for="textArea" class="col-lg-2 control-label">Описание</label>
		      <div class="col-lg-10">
		        <%= form.text_area :description, class: 'form-control' %>
		        <span class="help-block"></span>
		      </div>
		    </div>

		    
		    <div class="form-group">
		      <div class="col-lg-10 col-lg-offset-2">
		        <%= form.submit 'Создать', class: "btn btn-success" %>
		      </div>
		    </div>
		  </fieldset>
		<% end %>


	</div>

</div>